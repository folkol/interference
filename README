// Fragment shader:
#ifdef GL_ES
precision mediump float;
#endif

uniform float time;
uniform vec2 mouse;
uniform vec2 resolution;

void main( void ) {
     float speed = 3.0;
     float wavelength = 100.0;
     float amplitude = 0.2;

     vec2 position = ( gl_FragCoord.xy / resolution.xy );
     vec2 wave_one_pos = mouse;
     vec2 wave_two_pos = vec2(1.0, 1.0) - mouse;
     float wave_one_color = 0.5 + amplitude * sin(-speed * time + wavelength * distance(position, wave_one_pos));
     float wave_two_color = 0.5 + amplitude * sin(-speed * time + wavelength * distance(position, wave_two_pos));
     float color = (wave_one_color + wave_two_color) / 2.0;

     gl_FragColor = vec4( color, 0, color, 1 );
}
